%h1 B'More on Rails Members
#members
  - members.each do |member|
    .member
      %h2
        %a{:href => member.link}= member.name
      -# %img{:src => member.photo_url}
      %p
        = member.bio
        - if member.services && member.services.twitter
          %a{:href => "http://twitter.com/#{member.services.twitter.screen_name}"}= '@' + member.services.twitter.screen_name
